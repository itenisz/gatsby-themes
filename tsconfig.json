{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "jsx": "react",
      "lib": ["dom", "es2015", "es2017"],
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "strict": true,
      "noEmit": true, // Don't create files when running tsc
      "skipLibCheck": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
        "./examples/**/src/**/*",
        "./packages/**/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "public",
        ".cache",
        "examples/**/node_modules",
        "packages/**/node_modules"
    ]
}